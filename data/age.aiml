<category>
    <pattern>ТВОЙ ВОЗРАСТ</pattern>
    <template>
    <think>
    <set var="years">
        <interval>
            <jformat>MMMMMMMMM dd, yyyy</jformat>
            <style>years</style>
            <from>December 1, 2017</from>
            <to><date jformat="MMMMMMMMM dd, yyyy" /></to>
        </interval>
    </set>
    <set var="months">
        <interval>
            <jformat>MMMMMMMMM dd, yyyy</jformat>
            <style>months</style>
            <from>December 1, 2017</from>
            <to><date jformat="MMMMMMMMM dd, yyyy" /></to>
        </interval>
    </set>
    </think>
      <condition var="years">
        <li value="0">МНЕ <get var="months" /> месяцев.</li>
        <li>МНЕ <get var="years" /> лет.</li>
      </condition>
    </template>
 </category>

<category>
     <pattern>КОГДА ТВОЙ ДЕНЬ РОЖДЕНИЯ</pattern>
     <template>Мой день рождения - 1 декабря.</template>
</category>

<category>
     <pattern>В КАКОМ ГОДУ ТЫ РОДИЛСЯ</pattern>
     <template>Я был активирован 1 декабря 2017 года.</template>
</category>

<category>
    <pattern>ТЫ ХОДИШЬ В ШКОЛУ</pattern>
